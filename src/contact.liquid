---
  layout: base.liquid
  title: Website template
  locale: "de"
---
    <main class="content main">
      {% assign largeTextBlock = page-contact.content | where: "type", "largeTextBlock" | first %}
      <section class="section">
        {{ largeTextBlock.text[site.locale] | markdown }}
        {%- if largeTextBlock.image %}
          <img src="{{ largeTextBlock.image }}" alt="Large text block image">
        {% endif %}
        <div class="column has-text-left">
          <ul>
            <li>{{ contact.name }}</li>
            <li>{{ contact.street }}</li>
            <li>{{ contact.plz }} {{ contact.city }}</li>
            <li>{{ contact.phone }}</li>
            <li>{{ contact.email }}</li>
          </ul>
        </div>
      </section>
    </main>
